
# ============================================================================
# None Trainer 环境配置
# ============================================================================
# 复制此文件为 .env 并根据需要修改
# Linux/Mac: cp env.example .env
# Windows:   copy env.example .env
# ============================================================================

# ========================
# 服务配置
# ========================
# Web UI 端口（前后端统一端口）
TRAINER_PORT=9198

# 监听地址（0.0.0.0 允许外部访问，127.0.0.1 仅本地）
TRAINER_HOST=0.0.0.0

# ========================
# 模型路径（多模型支持）
# ========================

# ---------- Z-Image-Turbo ----------
# Z-Image-Turbo 基础模型路径
MODEL_PATH=./Z-Image-Turbo
# Z-Image VAE 路径（留空则使用 MODEL_PATH/vae）
VAE_PATH=

# Z-Image Text Encoder 路径（留空则使用 MODEL_PATH/text_encoder）
TEXT_ENCODER_PATH=

# Z-Image Transformer 路径（留空则使用 MODEL_PATH/transformer）
TRANSFORMER_PATH=

# ---------- LongCat-Image ----------
# LongCat-Image 基础模型路径
LONGCAT_MODEL_PATH=./longcat_models

# LongCat VAE 路径（留空则使用 LONGCAT_MODEL_PATH/vae）
LONGCAT_VAE_PATH=

# LongCat Text Encoder 路径（留空则使用 LONGCAT_MODEL_PATH/text_encoder）
LONGCAT_TEXT_ENCODER_PATH=

# LongCat Transformer 路径（留空则使用 LONGCAT_MODEL_PATH/transformer）
LONGCAT_TRANSFORMER_PATH=

# ========================
# 数据集配置
# ========================
# 默认数据集目录
DATASET_PATH=./datasets

# ========================
# Ollama 配置（用于图片标注）
# ========================
# Ollama 服务地址
OLLAMA_HOST=http://127.0.0.1:11434

# ========================
# 训练输出
# ========================
# LoRA 输出目录
LORA_PATH=./output

# ========================
# 图片生成输出
# ========================
# 生成图片保存路径
GENERATION_OUTPUT_PATH=./outputs

# ========================
# 硬件配置（可选，留空自动检测）
# ========================
# 强制指定 GPU 等级: tier_s, tier_a, tier_b
GPU_TIER=

# 强制指定显存大小 (GB)
GPU_MEMORY=

# ========================
# 开发模式
# ========================
# 开启调试模式 (1=开启)
DEBUG=0

